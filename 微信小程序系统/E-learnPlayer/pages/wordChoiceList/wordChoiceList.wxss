/* pages/wordChoiceList/wordChoiceList.wxss */
.background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #e9e93c;
  opacity: 0.4; /* 设置透明度为 50% */
  z-index: -1; /* 确保背景图片在页面下方 */
}
.container_index {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  margin-top: 70px;
  padding: 30px;
}

/* 按钮的默认样式 */
button {
  top: 30px;

  margin: 20rpx; /* 根据需要调整边距 */
  padding: 30rpx 20rpx; /* 根据需要调整内边距 */
  border: none;
  border-radius: 50rpx;
  background-color: yellow; /* 默认颜色 */
  color: #000; /* 文字颜色 */
}

/* 按钮被点击时的样式 */
button:active {
  background-color: orange; /* 点击时变为橙色 */
}
.word-btn{
  width: auto;
  height: auto;
  margin: 5px 5px 10px 5px;
  background-color: yellow;
  border: 3px solid orange;
  border-radius: 50rpx;
  font-size: 14px; /* 修改按钮文字大小 */
}

/* 匹配正确-按钮 */
.Right{
  background-color: orange; /* 选中按钮改变成橙色 */
}
/* 匹配错误-按钮 */
.Error {
  background-color: red; /* 选中按钮改变成橙色 */
}

/* 右上角倒计时 */
.countdown {
  position: fixed;
  top: 50rpx;
  right: 50rpx;
  font-size: 50rpx;
}
/* 左上角心心 */
.navbar {
  position: fixed;
  top: 50rpx;
  left: 50rpx;
}

.heart {
  font-size: 30px;
  font-weight: bold;
  margin-right: 30rpx;
}
/* 活动状态的心心样式 */
.heart.active {
  color: rgb(30,144,255);
}

/* 非活动状态的心心样式 */
.heart:not(.active) {
  color: #ccc; /* 例如：灰色表示心心已消失 */
}