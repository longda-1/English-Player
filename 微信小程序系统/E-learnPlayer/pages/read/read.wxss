/* pages/read/read.wxss */
.background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #e9e93c;
  opacity: 0.4; /* 设置透明度为 50% */
  z-index: -1; /* 确保背景图片在页面下方 */
}
.container_index {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0px;
}

/* 用户信息样式 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

/* 头像图片 */
.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}
/* 分割线 */
.divider {
  width: 100%; /* 宽度为屏幕宽度 */
  height: 5px; /* 分割线高度 */
  background-color: yellow; /* 分割线颜色 */
  margin-bottom: 3px;
}


.user-details {
  flex: 1;
}
.currency {
  display: flex;
  font-size: 20px;
}
/* 关卡 */
.level-scroll {
  height: 600px;
}

.level-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60px;
  border-bottom: 1px solid #eee;
}

.level-number {
  font-size: 16px;
  margin-right: 10px;
}


