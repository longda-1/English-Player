/* index.wxss */
.background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #e9e93c;
  opacity: 0.4; /* 设置透明度为 50% */
  z-index: -1; /* 确保背景图片在页面下方 */
}
.container_index {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0px;
  
}
/* 用户信息样式 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

/* 头像图片 */
.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
  margin-left: 10px;
}
/* 分割线 */
.divider {
  width: 100%; /* 宽度为屏幕宽度 */
  height: 5px; /* 分割线高度 */
  background-color: yellow; /* 分割线颜色 */
}


.user-details {
  flex: 1;
}

.currency {
  display: flex;
  font-size: 20px;
}

 /* 导航按钮样式 */
.button-group {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 50px; /* 调整按钮之间的间距 */
  margin-top: 70px; /* 向下移动100像素 */
  margin-bottom: 100px;
}

.nav-button {
  display: inline-block;
  padding: 10px 20px;
  background-color: orange; /* 橙色按钮 */
  color: black; /* 黑色文本 */
  border-radius: 20px;
  text-align: center;
  cursor: pointer;
  border: 2px solid darkorange; /* 深橙色边框 */
  transition: border-color 0.2s; /* 边框颜色变化动画 */
}



