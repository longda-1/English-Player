/* pages/wordList/wordList.wxss */
.background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #e9e93c;
  opacity: 0.4; /* 设置透明度为 50% */
  z-index: -1; /* 确保背景图片在页面下方 */
}
.container_index {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0px;
}

/* 用户信息样式 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

/* 头像图片 */
.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
  margin-left: 10px;
}
/* 分割线 */
.divider {
  width: 100%; /* 宽度为屏幕宽度 */
  height: 5px; /* 分割线高度 */
  background-color: yellow; /* 分割线颜色 */
}

/* 单词列表项样式 */
.word-item {
  position: relative;
}
/* 单词内容样式 */
.word-item-content {
  padding: 5px;
}
/* 橙色分割线样式 */
.divider-line {
  position: center;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2px;
  background-color: orange;
}
/* 声音小喇叭 */
.pronounce-icon {
  width: 20px;
  height: 20px;
  margin-top: 0px; /* 往下移动 10 像素 */
  margin-left: 5px;
}

/* 金币钻石 */
.user-details {
  flex: 1;
}

.currency {
  display: flex;
  font-size: 20px;
}

/* 倒计时 */
.Countdown {
  text-align: center;
  font-size: 36px;
  margin-top: 100px;
}

.CountdownAnimation {
  transition: all 0.5s ease;
}

